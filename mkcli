#!/usr/bin/env bash
set -euo pipefail
VERSION="0.1.0"
REG_USER="${MKCLI_REGISTRY:-$HOME/.config/mkcli/registry}"
LINK_DIR="${MKCLI_LINK_DIR:-/usr/local/bin}"
mkdir -p "$(dirname "$REG_USER")"
# resolve actual script directory even when invoked via symlink
SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
    DIR="$(cd -P "$(dirname "$SOURCE")" >/dev/null 2>&1 && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" >/dev/null 2>&1 && pwd)"
. "$SCRIPT_DIR/lib/registry.sh"
. "$SCRIPT_DIR/lib/link.sh"
. "$SCRIPT_DIR/lib/parse.sh"

lookup_dir() {
    registry_lookup "$1"
}

run_make() {
    dir="$1"
    shift
    if [ "${MKCLI_DIRENV-}" != "0" ] && [ -f "$dir/.envrc" ] && command -v direnv >/dev/null; then
        exec direnv exec "$dir" make -C "$dir" "$@"
    else
        exec make -C "$dir" "$@"
    fi
}

alias_dispatch() {
    local alias_name="$(basename "$0")"
    local dir="$(lookup_dir "$alias_name")"
    if [ -z "$dir" ]; then
        echo "unknown alias $alias_name" >&2
        exit 1
    fi
    case "${1-}" in
    "" | help | --help)
        if grep -q -E '^help:' "$dir/Makefile"; then
            run_make "$dir" help
        else
            parse_list_targets "$dir"
        fi
        exit 0
        ;;
    --list-targets)
        parse_list_targets "$dir"
        exit 0
        ;;
    esac
    run_make "$dir" "$@"
}

cmd_add() {
    [ $# -eq 2 ] || {
        echo "usage: mkcli add <alias> <path>"
        exit 1
    }
    local alias_name="$1"
    local abs_path="$(realpath "$2")"
    [ -f "$abs_path/Makefile" ] || {
        echo "Makefile not found in $abs_path"
        exit 1
    }
    if registry_lookup "$alias_name" >/dev/null; then
        printf 'Alias %s already exists, override? [y/N]: ' "$alias_name"
        local reply
        read -r reply
        [ "$reply" = "y" ] || exit 1
    fi
    registry_write "$alias_name" "$abs_path" "$VERSION"
    echo "> adding to PATH"
    link_create "$alias_name" "$(realpath "$0")"
    echo "$alias_name registered $abs_path"
}

cmd_list() {
    registry_list | awk '{printf "%-10s %-40s %s\n", $1, $2, $3}'
}

cmd_remove() {
    [ $# -eq 1 ] || {
        echo "usage: mkcli remove <alias>"
        exit 1
    }
    local alias_name="$1"
    if ! registry_lookup "$alias_name" >/dev/null; then
        echo "alias not found" >&2
        exit 1
    fi
    local dst="$LINK_DIR/$alias_name"
    if [ -e "$dst" ]; then
        if [ -L "$dst" ]; then
            local target="$(readlink "$dst")"
            if [ "$target" != "$(realpath "$0")" ]; then
                echo "$dst points elsewhere" >&2
                exit 1
            fi
        else
            echo "$dst is not a symlink" >&2
            exit 1
        fi
    fi
    printf 'Remove alias %s? [y/N]: ' "$alias_name"
    local reply
    read -r reply
    [ "$reply" = "y" ] || exit 1
    link_remove "$alias_name" "$(realpath "$0")"
    registry_delete "$alias_name"
    echo "Alias '$alias_name' removed."
}

show_help() {
    printf '%s\n' "mkcli $VERSION" "commands:" "  add <alias> <path>" "  list" "  remove <alias>" "options:" "  --help" "aliases:" "  <alias> --help (list targets)" "  <alias> <target> [args]"
}

main() {
    local alias_name="$(basename "$0")"
    local dir=$(lookup_dir "$alias_name")
    if [ -n "$dir" ]; then
        alias_dispatch "$@"
        exit $?
    fi
    case "${1-}" in
    add)
        shift
        cmd_add "$@"
        ;;
    list) cmd_list ;;
    remove)
        shift
        cmd_remove "$@"
        ;;
    -h | --help | help) show_help ;;
    "") show_help ;;
    *)
        echo "unknown command $1"
        exit 1
        ;;
    esac
}
main "$@"
